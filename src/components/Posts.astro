---
import { type BlogEntry, blogEntryUrl } from '$lib/blog';

import FormattedDate from '$components/FormattedDate.astro';
import TagList from '$components/TagList.astro';

interface Props {
  posts: BlogEntry[];
}

const { posts } = Astro.props;
---

<ul class="m-0 flex flex-col flex-wrap gap-1">
  {
    posts.map((post) => (
      <li class="block m-0">
        <h1 class="text-3xl mt-6 mb-4">
          <a href={blogEntryUrl(post)}>{post.data.title}</a>
        </h1>

        <p class="my-4 text-sm italic">Published <FormattedDate date={post.data.published} /></p>

        <TagList tags={post.data.tags} />
      </li>
    ))
  }
</ul>
